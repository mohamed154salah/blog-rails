<div class="article" id="<%= dom_id article %>">
  <p class="head">
    <%= article.title %>
  </p>
  
  <p>
    <%= article.content  %>
  </p>

  
  <p >
<i class="fa-solid fa-user"></i>
<%= link_to article.user.name, user_path(article.user),
   :class => "userLink lefter"%>
  </p>
  
  <p class="lefter">
    <strong>Posted:</strong>
    <%=((Time.current - article.created_at)/1.minute).round%>
    <span>minutes ago</span>
  </p>
 
</div>
